<assembly>
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>

    <!-- Configure the artifacts to include  -->
    <dependencySets>
        <!-- first the actual artifacts -->
        <dependencySet>
            <includes>
                <include>org.hibernate:hibernate-search-engine</include>
                <include>org.hibernate:hibernate-search-orm</include>
            </includes>
        </dependencySet>
        <!-- Now we take care of the transitive dependencies -->
        <dependencySet>
            <outputDirectory>lib/required</outputDirectory>
            <includes>
                <include>antlr:antlr</include>
                <include>org.apache.avro:avro</include>
                <include>commons-collections:commons-collections</include>
                <include>org.hibernate.common:hibernate-commons-annotations</include>
                <include>org.hibernate:hibernate-core</include>
                <include>org.codehaus.jackson:jackson-core-asl</include>
                <include>org.codehaus.jackson:jackson-mapper-asl</include>
                <include>org.jboss.logging:jboss-logging</include>
                <include>org.apache.lucene:lucene-core</include>
                <include>com.thoughtworks.paranamer:paranamer</include>
                <include>org.xerial.snappy:snappy-java</include>
                <include>dom4j:dom4j</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib/provided</outputDirectory>
            <includes>
                <include>org.hibernate.javax.persistence:hibernate-jpa-2.0-api</include>
                <include>org.jboss.spec.javax.jms:jboss-jms-api_1.1_spec</include>
                <include>org.jboss.spec.javax.transaction:jboss-transaction-api_1.1_spec</include>
                <include>org.jboss.spec.javax.annotation:jboss-annotations-api_1.1_spec</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib/clustering</outputDirectory>
            <includes>
                <include>org.hibernate:hibernate-search-infinispan</include>
                <include>org.infinispan:infinispan-core</include>
                <include>org.infinispan:infinispan-lucene-directory</include>
                <include>org.jboss.marshalling:jboss-marshalling</include>
                <include>org.jboss.marshalling:jboss-marshalling-river</include>
                <include>org.rhq.helpers:rhq-pluginAnnotations</include>
                <include>org.jgroups:jgroups</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib/optional</outputDirectory>
            <includes>
                <include>commons-lang:commons-lang</include>
                <include>org.hibernate:hibernate-entitymanager</include>
                <include>org.hibernate:hibernate-search-analyzers</include>
                <include>org.javassist:javassist</include>
                <include>org.apache.lucene:lucene-analyzers</include>
                <include>org.apache.lucene:lucene-grouping</include>
                <include>org.apache.lucene:lucene-highlighter</include>
                <include>org.apache.lucene:lucene-memory</include>
                <include>org.apache.lucene:lucene-misc</include>
                <include>org.apache.lucene:lucene-smartcn</include>
                <include>org.apache.lucene:lucene-spatial</include>
                <include>org.apache.lucene:lucene-spellchecker</include>
                <include>org.apache.lucene:lucene-stempel</include>
                <include>org.apache.solr:solr-analysis-extras</include>
                <include>org.apache.solr:solr-commons-csv</include>
                <include>org.apache.solr:solr-core</include>
                <include>org.apache.solr:solr-solrj</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <files>
        <file>
            <source>../READ.md</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>../changelog.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>../lgpl.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <directory>../hibernate-search-engine/target/apidocs</directory>
            <outputDirectory>docs/api</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>../hibernate-search-infinispan/target/apidocs</directory>
            <outputDirectory>docs/api</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>../hibernate-search-orm/target/apidocs</directory>
            <outputDirectory>docs/api</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>

</assembly>
